{
	"$schema": "https://cdn.deno.land/deno/versions/v1.18.2/raw/cli/schemas/config-file.v1.json",
	"lint": {
		"files": {
			"include": ["impl/", "util/"]
		},
		"rules": {
			"include": ["no-eval", "no-array-constructor", "explicit-function-return-type", "camelCase"]
		}
	},

	"fmt": {
		"files": {
			"include": ["./mod.ts", "./deno.json", "util/", "impl/"]
		},

		"options": {
			"useTabs": true,
			"lineWidth": 120,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
